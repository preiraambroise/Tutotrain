{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Votre carnet de bord ! ✅</h1>
    <h1> Votre projet professionnel {{ cdb.ProjetProfessionnelId.Resume }}! ✅</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

    {% for value in result %}
        <p>{{ value.nom }} <mark>{{ value.etat }}</mark></p>
        <p>{{ value.description }}</p> <a href="{{ path('etape_edit', {'idetape' : value.id } ) }}">editer</a>
        <form method="post" action="{{ path('etape_delete', {'idetape' : value.id}) }}">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ value.id) }}">
            <button type="submit">Supprimer</button>
        </form>
    {% endfor %}
</div>
{% endblock %}
